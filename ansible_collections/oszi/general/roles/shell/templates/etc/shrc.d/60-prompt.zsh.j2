# shellcheck shell=sh disable=SC2016,SC2034 # single quotes, variable appears unused
# shellcheck disable=SC3010,SC3024,SC3028,SC3030 # in POSIX [[ ]], +=, arrays and UID are undefined

HISTFILE=~/.zsh_history
HISTSIZE={{ shell_histsize | int }}
SAVEHIST={{ shell_histfilesize | int }}

setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_REDUCE_BLANKS
setopt HIST_SAVE_NO_DUPS
setopt INC_APPEND_HISTORY
setopt NO_SHARE_HISTORY
unsetopt SHARE_HISTORY

setopt RM_STAR_SILENT # alias rm -i/-I
setopt PROMPT_SUBST

PROMPT='%F{{ (ansible_virtualization_role == 'guest') | ternary('{green}', '{red}') }}%n@%m%f'

if [[ "$UID" -eq 0 ]]; then
    PROMPT='%S'"$PROMPT"'%s'
fi

PROMPT="$PROMPT"':%F{blue}%1~%f${vcs_info_msg_0_}%(?..%F{red})%#%f '
RPROMPT='%F{8}[%?]%f'

autoload -Uz vcs_info
precmd_functions+=(vcs_info)

zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:git:*' actionformats '@%F{yellow}%b|%a%f'
zstyle ':vcs_info:git:*' formats '@%F{yellow}%b%f'

_terminal_title() {
    print -Pn '\e]0;%n@%m:%~\a'
}

precmd_functions+=(_terminal_title)
