#!/usr/bin/env python3
# pylint: disable=consider-using-with,missing-module-docstring,line-too-long
import json
import sys

import yaml

src = open(sys.argv[1], "r", encoding="utf-8") if len(sys.argv) > 1 and sys.argv[1] != "-" else sys.stdin
dst = open(sys.argv[2], "w", encoding="utf-8") if len(sys.argv) > 2 and sys.argv[2] != "-" else sys.stdout
yaml.dump(json.load(src), dst)
