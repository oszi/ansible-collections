root = true

# Be consistent for shell and python scripts
# with or without file extensions.
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{Makefile*,*.mk,*.go}]
indent_style = tab

[*.{json,yaml,yml,toml,xml,html,css}{,[-_~],.j2}]
indent_style = space
indent_size = 2

[*.{hcl,tf,tfvars*,tfstate*}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
