root = true

# Be consistent for shell and python scripts
# with or without file extensions.
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{{BSD,GNU,}makefile,Makefile*,*.mk}]
indent_style = tab

[*.{hcl,tf,tfvars*,tfstate*}]
indent_style = space
indent_size = 2

[*.{json,yaml,yml,xml,html,css}{,[-_~],.j2}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
