root = true

# Be consistent for shell and python scripts
# with or without file extensions.
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{{BSD,GNU,}makefile,Makefile*,*.mk,*.gmk,*.make}]
indent_style = tab

[*.{json,yaml,yml,tf,hcl,ini,cfg,conf,toml,xml,html,css}{,[-_~],.j2,.jinja2,.jinja}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
